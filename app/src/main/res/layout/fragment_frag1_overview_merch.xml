<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".frag1_overviewMerch">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/WelcomingUser"
        android:layout_width="247dp"
        android:layout_height="133dp"
        android:text="Welcome merchant!"
        android:textAlignment="center"
        android:textSize="48sp"
        android:textStyle="bold"
        android:translationX="90dp"
        android:translationY="100dp" />

    <TextView
        android:id="@+id/DirectionsToUser"
        android:layout_width="337dp"
        android:layout_height="99dp"
        android:text="Swipe right to view customer order history in list and chart form!"
        android:textAlignment="center"
        android:textSize="20sp"
        android:translationX="42dp"
        android:translationY="250dp" />

    <Button
        android:id="@+id/btVar1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Get Weather"
        android:textAlignment="center"
        android:textSize="20dp"
        android:translationX="40dp"
        android:translationY="360dp" />
    <TextView
        android:id="@+id/textView"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:layout_margin="40dp"
        android:layout_marginBottom="100dp"
        android:fontFamily="sans-serif-black"
        android:text="Get temperature here"
        android:textAlignment="center"
        android:textColor="#BCBDBB"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        android:translationX="20dp"
        android:translationY="400dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="89dp"
        android:layout_height="122dp"
        android:contentDescription="cloudvview"
        android:translationX="260dp"
        android:translationY="320dp"
        tools:src="@drawable/cloudpic" />

</FrameLayout>