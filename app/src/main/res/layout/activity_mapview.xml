<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/user_drawer_layout"
    tools:context=".mapView">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <include layout="@layout/user_tool_bar" />

        <fragment
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="450dp"

            app:cameraTilt="30"
            app:cameraZoom="10"

            app:mapType="normal"

            app:uiCompass="true"
            app:uiRotateGestures="true"
            app:uiScrollGestures="true"
            app:uiTiltGestures="true"
            app:uiZoomControls="true"
            app:uiZoomGestures="true"
            tools:context="com.example.mapwithmarker.MapsMarkerActivity" />

        <TextView
            android:id="@+id/transportationMode"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Transportation Mode:"
            android:layout_marginVertical="5dp"
            android:layout_margin="5dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/drivingbutton"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="Driving"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                />

            <Button
                android:id="@+id/bikingbutton"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="Biking"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/currentMode"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Current Mode:"
                android:layout_marginLeft="5dp"
                />
            <TextView
                android:id="@+id/textCurrentMode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Driving"
                android:layout_marginLeft="5dp"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/travelTime"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Travel Time: "
                android:layout_marginLeft="5dp"/>
            <TextView
                android:id="@+id/textTravelTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_marginLeft="5dp"  />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/distance"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Distance: "
                android:layout_marginLeft="5dp"/>
            <TextView
                android:id="@+id/textDistance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text= ""
                android:layout_marginLeft="5dp"  />
        </LinearLayout>




    </LinearLayout>



    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@android:color/white">

        <include layout="@layout/user_nav_drawer" />
    </RelativeLayout>


</androidx.drawerlayout.widget.DrawerLayout>